<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/textview_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        tools:text="Perk Chocolate" />

    <ImageView
        android:id="@+id/imageview_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_edit"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textview_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textview_product_name"
        android:layout_marginTop="16dp"
        tools:text="Quantity Left - 15" />

    <TextView
        android:id="@+id/textview_timestamp_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_quantity"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        tools:text="Last Updated on 25 Dec 2017" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider"
        android:layout_below="@id/textview_quantity"
        android:layout_marginTop="4dp"/>
</RelativeLayout>
